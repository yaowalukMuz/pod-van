<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="10dip" />
            <stroke android:width="2dip" android:color="@color/MediumOrchid" />
            <gradient android:angle="-90" android:startColor="@color/Orchid" android:endColor="@color/Plum"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="10dip" />
            <stroke android:width="2dip" android:color="@color/Plum" />
            <solid android:color="@color/MediumOrchid"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="10dip" />
            <stroke android:width="2dip" android:color="@color/MediumOrchid" />
            <gradient android:angle="-90" android:startColor="@color/Plum" android:endColor="@color/Orchid" />
        </shape>
    </item>
</selector>