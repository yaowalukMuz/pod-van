<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hitachi_tstv.yodpanom.yaowaluk.pod_val.PlanDeliveryActivity">

    <LinearLayout
        android:id="@+id/linPDATop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgSymbol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:padding="10dp"
                android:tint="@color/OrangeRed"
                app:srcCompat="@drawable/factory" />

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.60"
                android:padding="10dp"
                android:textColor="@color/Black"
                android:textSize="@dimen/txt_h2"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/img_l"
            android:layout_width="@dimen/picture_width"
            android:layout_height="@dimen/picture_height"
            android:layout_margin="@dimen/mini_margin"
            android:layout_weight="0.25"
            android:visibility="gone"
            app:srcCompat="@drawable/img_l" />

        <ImageView
            android:id="@+id/img_b"
            android:layout_width="@dimen/picture_width"
            android:layout_height="@dimen/picture_height"
            android:layout_margin="@dimen/mini_margin"
            android:layout_weight="0.25"
            android:visibility="gone"
            app:srcCompat="@drawable/img_b" />

        <ImageView
            android:id="@+id/img_r"
            android:layout_width="@dimen/picture_width"
            android:layout_height="@dimen/picture_height"
            android:layout_margin="@dimen/mini_margin"
            android:layout_weight="0.25"
            android:visibility="gone"
            app:srcCompat="@drawable/img_r" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/img_4"
            android:layout_width="@dimen/picture_width_l"
            android:layout_height="@dimen/picture_height_l"
            android:layout_margin="@dimen/mini_margin"
            android:layout_weight="0.5"
            android:visibility="gone"
            app:srcCompat="@drawable/warehouse2" />

        <ImageView
            android:id="@+id/img_5"
            android:layout_width="@dimen/picture_width_l"
            android:layout_height="@dimen/picture_height_l"
            android:layout_margin="@dimen/mini_margin"
            android:layout_weight="0.5"
            android:visibility="gone"
            app:srcCompat="@drawable/warehouse2" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:layout_weight="0"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/img_6"
            android:layout_width="@dimen/picture_width_l"
            android:layout_height="@dimen/picture_height_l"
            android:layout_margin="@dimen/mini_margin"
            android:layout_weight="0.5"
            android:visibility="gone"
            app:srcCompat="@drawable/warehouse2" />

        <ImageView
            android:id="@+id/img_7"
            android:layout_width="@dimen/picture_width_l"
            android:layout_height="@dimen/picture_height_l"
            android:layout_margin="@dimen/mini_margin"
            android:layout_weight="0.5"
            android:visibility="gone"
            app:srcCompat="@drawable/warehouse2" />

    </LinearLayout>

    <ListView
        android:id="@+id/lisPDAPlan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/linPDABottom"
        android:layout_below="@+id/linPDATop" />

    <LinearLayout
        android:id="@+id/linPDABottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_arrival"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height"
            android:layout_margin="@dimen/mini_margin"
            android:layout_marginBottom="@dimen/mini_margin"
            android:layout_weight="1"
            android:background="@drawable/green_button"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            android:text="Arrival"
            android:textSize="@dimen/txt_h3"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height"
            android:layout_margin="@dimen/mini_margin"
            android:layout_marginBottom="@dimen/mini_margin"
            android:layout_weight="1"
            android:background="@drawable/salmon_button"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            android:text="Confirm"
            android:textSize="@dimen/txt_h3"
            android:textStyle="bold" />
    </LinearLayout>


</RelativeLayout>