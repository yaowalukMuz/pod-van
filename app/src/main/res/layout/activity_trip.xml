<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hitachi_tstv.yodpanom.yaowaluk.pod_val.TripActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/headerLinTrip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/dateBtnTrip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="09/09/2017"
                android:textSize="@dimen/txt_h3"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/middenLinTrip"
                android:layout_width="match_parent"
                android:layout_height="148dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgDriverTrip"
                    android:layout_width="134dp"
                    android:layout_height="116dp"
                    app:srcCompat="@mipmap/ic_launcher_round" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/truckIdLblTrip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Truck Id :"
                            android:textColor="@color/Black"
                            android:textSize="@dimen/txt_nm"
                            android:textStyle="bold"
                            tools:text="Truck Id :" />

                        <TextView
                            android:id="@+id/truckIdValTrip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="AB-2222"
                            android:textColor="@color/Black"
                            android:textSize="@dimen/txt_nm" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/truckTypeLblTrip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="TruckType : "
                            android:textColor="@color/Black"
                            android:textSize="@dimen/txt_nm"
                            android:textStyle="bold"
                            tools:text="TruckType : " />

                        <TextView
                            android:id="@+id/truckTypeValTrip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="3.22"
                            android:text="18W"
                            android:textColor="@color/Black"
                            android:textSize="@dimen/txt_nm" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/driverNameLblTrip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.59"
                            android:text="Driver Name  :"
                            android:textColor="@color/Black"
                            android:textSize="@dimen/txt_nm"
                            android:textStyle="bold"
                            tools:text="Driver Name  :" />

                        <TextView
                            android:id="@+id/driverNameValTrip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="2.88"
                            android:text="Mana "
                            android:textColor="@color/Black"
                            android:textSize="@dimen/txt_nm" />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ListView
                android:id="@+id/tripListviewTrip"
                android:layout_width="match_parent"
                android:layout_height="343dp" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>